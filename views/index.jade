extends layout

block content
	h1 #{title}
	div(class='container-fluid')
		div(class='row')
			section(id='game' class='col-xs-12 col-sm-6')
				form(id='registerform')
					div(class='form-group row')
						div(class='col-xs-3 col-sm-2')
							label(for='username') Username
						div(class='col-xs-9 col-sm-4' style='padding-right: 0px')
							input(id='username' type='text' class='form-control' placeholder='name')
						div(class='col-xs-3 col-sm-1')
							label(for='colorpicker') Color	
						div(class='col-xs-5 col-sm-2')
							input(type='color' id='colorpicker' class='form-control')
						button(type='submit' class='btn btn-default col-xs-4 col-sm-2') Register
				div(class='row' id='dealer')
					label(class='col-xs-3 col-sm-2') Dealer(19)
					img(src='images/ah.png' class='img-responsive col-xs-3' alt='testimage')
				div(class='row' id='owncards')
					div(class='col-xs-3 col-sm-2')
						label Your cards
						button(id='drawcard' class='btn btn-default' disabled='disabled') Draw
						button(id='stand' class='btn btn-default' disabled='disabled') Stand
			section(id='chat' class='col-sm-6 col-xs-12')
				div(class='row')
					div(id='scrollermessages' class='col-sm-9 col-xs-12 pre-scrollable')
						ul(id='messages')
					div(id='scrollerpeople' class='col-sm-3 hidden-xs pre-scrollable')
						ul(id='people')
				form(id='chatform' class='form-inline row')
					div(class='col-xs-9')
						input(type='text' id='inputmessage' class='form-control')
					button(class='btn btn-default col-xs-3') Send
	script(src='/socket.io/socket.io.js')
	script(src='javascripts/client.js')